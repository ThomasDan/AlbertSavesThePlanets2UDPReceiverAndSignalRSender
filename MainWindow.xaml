        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlbertSavesThePlanets2UDPReceiverAndSignalRSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="350" Background="LightGray">
        
    <Grid>
        <Button x:Name="StartButton" FontSize="12" FontWeight="Bold" Content="Start Receiving" Click="EngageLoop"  HorizontalAlignment="Center" Margin="0,0,0,200" VerticalAlignment="Center" Width="225" Height="50"/>
